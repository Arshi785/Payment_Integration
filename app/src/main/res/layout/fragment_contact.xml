<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dell.Fragments.Contact">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:background="#88100000"
            android:padding="10dp"
            >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/spark"/>
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Sparks Foundation"
            android:layout_toRightOf="@id/logo"
            android:textStyle="bold"
            android:textColor="#FFAB00"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="...inspiring,innovating,integrating"
                android:layout_toRightOf="@id/logo"
                android:layout_below="@id/title1"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                />
<View
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/white"
    android:layout_below="@id/logo"
    android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:gravity="center_horizontal"
                android:layout_below="@id/view"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </RelativeLayout>


    </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get In Touch"
                android:layout_toRightOf="@id/logo"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#3C55E6">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Important Notice"
                android:textColor="#A3CEF4"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Internship / GRIP related queries are answered only on our LinkedIn Network \n \nJOIN TSF NETWORK HERE (https://www.linkedin.com/groups/10379184/)

"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="#4AB1B0"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:background="@color/teal_700"
                    android:src="@drawable/ic_baseline_location_on_24"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:layout_marginTop="5dp"
                    android:textColor="#AEEDE5"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/img"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
                    <TextView
                        android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THE HANGAR, NUS ENTERPRISE"
                    android:layout_marginTop="5dp"
                    android:textColor="#F3F6F6"
                        android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                        android:layout_below="@id/title"
                    android:layout_toRightOf="@id/img" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21 HENG KENG TERRRACE ,SINGAPORE,119613"
                    android:layout_marginTop="5dp"
                    android:textColor="#F3F6F6"
                        android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                        android:layout_below="@id/text4"
                    android:layout_toRightOf="@id/img" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView><com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="#F6A80A"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:padding="20sp"
                    android:background="#DF9704"
                    android:src="@drawable/ic_baseline_phone_iphone_24"/>
                <TextView
                    android:id="@+id/title6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:layout_marginTop="5dp"
                    android:textColor="#FADA97"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/img1"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
                    <TextView
                        android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(for Non-Internship/ GRIP Queries Only)"
                    android:layout_marginTop="5dp"
                    android:textColor="#F3F6F6"
                        android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                        android:layout_below="@id/title6"
                    android:layout_toRightOf="@id/img1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+65-8402-8590, info@thesparksfoundation.sg"
                    android:layout_marginTop="5dp"
                    android:textColor="#F3F6F6"
                        android:textSize="13dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                        android:layout_below="@id/text6"
                    android:layout_toRightOf="@id/img1" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>